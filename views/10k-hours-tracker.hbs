  }
</style>

<script>
  // Cargar las entradas cronol칩gicas
  fetch('/post/10k-hours-tracker-entries.json')
    .then(response => response.json())
    .then(data => {
      const container = document.getElementById('timeline-container');
      
      // Ordenar entradas por timestamp (m치s reciente primero)
      const entries = data.entries.sort((a, b) => 
        new Date(b.timestamp) - new Date(a.timestamp)
      );

      entries.forEach((entry, index) => {
        const entryDiv = document.createElement('div');
        entryDiv.className = 'timeline-entry';
        
        const date = new Date(entry.timestamp);
        const formattedDate = date.toLocaleDateString('es-ES', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
          hour: '2-digit',
          minute: '2-digit'
        });

        entryDiv.innerHTML = `
          <div class="timeline-header">
            <h3 class="timeline-title">
              <span class="timeline-number">${entries.length - index}</span>
              ${entry.title}
            </h3>
            <span class="timeline-date">${formattedDate}</span>
          </div>
          <p class="timeline-text flow-text">${entry.text}</p>
        `;

        container.appendChild(entryDiv);
      });
    })
    .catch(error => console.error('Error cargando las entradas:', error));
</script>
