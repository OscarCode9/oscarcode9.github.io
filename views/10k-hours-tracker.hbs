  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    flex-wrap: wrap;
  }

  .timeline-title {
    font-size: 1.4em;
    font-weight: bold;
    color: #26a69a;
    margin: 0;
  }

  .timeline-date {
    color: #888;
    font-size: 0.9em;
